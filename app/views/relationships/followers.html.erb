<div class="col-xs-9">
<h2>Followers Users </h2>
<% if @users.count == 0 %>
 <p>ユーザーはいません</p>
<% else %>
  <table class="table">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="4"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %></td>
          <td><%= user.name %></td>
          <td>フォロー数:<%= user.followings.count %></td>
          <td>フォロワー数:<%= user.followers.count %></td>
          <td>
            <%= link_to "Show", user_path(user.id) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
</div>