<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">

    <div class="col-md-4" >
      <h2>User info</h2>
       <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, format: 'jpeg' %>
      <table>
        <tr>
          <th>name</th><th></th>
        </tr>
        <tr>
          <th>introduction</th><th></th>
        </tr>
      </table>
      <div class="row">
         <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary" do %>
        <span class="fas fa-user-cog"></span>
        <% end %>
      </div>

      <h2>New book</h2>
        <%= form_with model:@book, local:true do |f| %>

      <h4>Title</h4>
        <%= f.text_field :title %>

     <h4>Opinion</h4>
        <%= f.text_area :body %>

        <%= f.submit 'Create book' %>
        <% end %>


     </div>
     <div class="col-md-8">
    <table class="table table-striped">
     <h2>Users</h2>
     <table>
      <tr>
       <th>image</th>
       <th>name</th>
      <th colspan="3"></th>
      </tr>
       <% @users.each do |user| %>
      <tr>
       <td>
          <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg' %>
       </td>
       <td>
         <%= user.name %>
       </td>
        <% end %>

    </table>
    </div>
  </div>
</div>