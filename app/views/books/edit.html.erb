<div class="container">
 <div class="row">
   <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

    <h1>Editing Book</h1>
      <% if @book.errors.any? %>
         <%= @book.errors.count %>errors
         <% @book.errors.full_messages.each do |message| %>
          <%= message %>
         <% end %>
      <% end %>
<!-- form_with部分 -->
     <%= form_with model:@book, local: true do |f| %>
     <h4>Title</h4>
        <%= f.text_field :title %>
     <h4>Body</h4>
         <%= f.text_area :body %>
          <%= f.submit 'Update Book', class:"btn btn-success" %>
        <% end %>
         <%= link_to "Show", book_path(@book.id) %> |
         <%= link_to "Back", books_path(@books) %>
  </div>
 </div>
</div>