<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">

    <div class="col-md-4" >
      <h2>User info</h2>
      <img class="attachment user profile_image fallback">
      <table>
        <tr>
          <th>name</th><th></th>
        </tr>
        <tr>
          <th>introduction</th><th></th>
        </tr>
      </table>
      <div class="row">
        <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary" do %>
        <span class="fas fa-user-cog"></span>
        <% end %>
      </div>

      <h2>New book</h2>
       <% if @booknew.errors.any? %>
         <%= @booknew.errors.count %>errors
         <% @booknew.errors.full_messages.each do |message| %>
           <%= message %>
         <% end %>
      <% end %>

        <%= form_with model:@booknew, local:true do |f| %>
      <h4>Title</h4>
        <%= f.text_field :title %>

      <h4>Opinion</h4>
        <%= f.text_area :body %>

        <%= f.submit 'Create book' %>
        <% end %>


     </div>
     <div class="col-md-8">
    <table class="table table-striped">
     <h2>Books datail</h2>
     <table>
      <tr>
       <th>Title</th>
       <th>Opinion</th>
      <th colspan="3"></th>
      </tr>
      <tr>
       <td>
         <%= @book.title %>
       </td>
       <td>
         <%= @book.body %>
       </td>


    </table>
    </div>
  </div>
</div>