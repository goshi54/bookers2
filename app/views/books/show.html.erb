<%= flash[notice] %>

<div class="container">
  <div class="row">
   <%= render 'users/userin', book: @booknew, user: @user  %>
     <div class="col-md-8 offset-md-1">

     <h2>Book detail</h2>
     <table class="table">
      <tr>
        <td>
          <%= link_to user_path(@book.user) do %>
           <%= attachment_image_tag @book.user, :profile_image, size:'40x40', format: 'jpeg', fallback: "no_image.jpg" %>
          <% end %>
          <%= link_to user_path(@book.user) do %>
            <%= @user.name %>
           <% end %>
         </td>

         <td>
          <span>
           <%= link_to book_path(@book.id) do %>
            <%= @book.title %>
           <% end %>
          </span>
         </td>
         <%= @book.body %>
        <th colspan="3"></th>
      </tr>
      <% if @book.user == current_user %>
     <td>
     <div class="row">
        <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %>
     </div>
     </td>
     <td>
     <span>
         <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ", class: "btn btn-sm btn-danger" %>
     </span>
   </td>
 </tr>
     <% else %>
      <% end %>

    </table>
    </div>
  </div>
</div>